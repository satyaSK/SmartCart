<style>
    .content {
        max-width: 1000px;
        margin: auto;
        background: white;
        padding: 10px;
    }
    .content-right {
        float: right;
    }


</style>


<div class="content">
    {{# if products}}
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
                <ul class = "list-group">
                    {{# each products}}
                        <li class="list-group-item">
                            <span class="badge">{{ this.qty}}</span>
                            <strong>{{this.item.name}}</strong>
                            <span class="label label-success">{{this.fprice}}</span>
                            <span class="label label-secondary">{{this.wprice}}</span>
                            <div class="content-right">
                                <a href="/reduce/{{this.item._id}}"> Reduce </a>
                                <a href="/increase/{{this.item._id}}"> Increase </a>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
                {{# if market }}
                    <strong>Total: ${{totalPrice}}     Store: FredMeyers</strong>
                {{else}}
                    <strong>Total: ${{totalPrice}}     Store: Winco</strong>
                {{/if}}

            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
                <button type="button" class="btn btn-success">Checkout</button>
            </div>
        </div>
    {{else}}
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
                <h2>Cart Empty..</h2>
            </div>
        </div>
    {{/if}}

</div>







